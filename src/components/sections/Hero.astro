---
import { Image } from "astro:assets";
import heroImg from "../../assets/wind3.jpg";
import CtaButton from "../shared/CtaButton.astro";
import GradiantText from "../shared/GradiantText.astro";
import SubTitle from "../shared/SubTitle.astro";
import Title from "../shared/Title.astro";

const heroSection = {
  headline1: "Powering",
  headline2: "Tomorrow,",
  headline3: "Sustainably",
  headline4: "Today!",
  subheading1: "Join us in the green energy revolution",
  subheading2: "and be part of a sustainable future",
  subheading3: "for generations to come.",
  buttonText: "Get Started",
  backgroundImage: "hero-background-image.jpg",
};

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<section class=`relative  ${className} w-full h-[80vh]` id="hero">
  <div class="absolute inset-0"></div>
  <div
    class="absolute top-0 start-0 w-full h-[80vh] pt-[100px] flex flex-col md:flex-row justify-end"
  >
    <div class="place-items-center flex flex-col text-center">
      <Title className="text-accent dark:text-accent-light">
        {heroSection.headline1}
        <GradiantText
          >{" " + heroSection.headline2}
          <br />
          {" " + heroSection.headline3}
        </GradiantText>{heroSection.headline4}
      </Title>
      <SubTitle
        className="text-accent dark:text-accent-light mt-10 leading-9 italic"
      >
        {heroSection.subheading1}
        <br />
        {heroSection.subheading2}<br />
        {heroSection.subheading3}
      </SubTitle>
      <div class="pt-10">
        <CtaButton />
      </div>
    </div>
    <div class="flex relative">
      <Image
        src={heroImg}
        alt="Hero"
        width="2350"
        height="2359"
        class="w-full h-full object-cover absolute top-0 start-0"
      />
      <svg
        class="fill-base dark:fill-base-dark z-10"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 500 400"
      >
        <path d="M0 0l0 400L100 0Z"> </path>
      </svg>
    </div>
  </div>
</section>
