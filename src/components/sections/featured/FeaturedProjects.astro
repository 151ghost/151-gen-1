---
import Container from "../../shared/Container.astro";
import Paragraph from "../../shared/Paragraph.astro";
import Title from "../../shared/Title.astro";

import img1 from "../../assets/solar-person.jpg";
import img2 from "../../assets/wind-person.jpg";
import img3 from "../../assets/amazonas2.jpg";
import FeaturedProject from "./components/FeaturedProject.astro";
import Title2 from "../../shared/Title2.astro";
import SubTitle2 from "../../shared/SubTitle2.astro";

import { projectsSection } from "./data.ts";

type ProjectsProps = {
  title: string;
  description: string;
  location: string;
  visual: ImageMetadata;
};

export interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<section id="projects" class=`relative pt-10 ${className}`>
  <Container className="">
    <div class="text-center max-w-3xl mx-auto space-y-4">
      <Title2>{projectsSection.title}</Title2>
      <SubTitle2>
        {projectsSection.subheading}
      </SubTitle2>
    </div>
    <div class="mt-8 grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {
        projectsSection.projects.map((project: ProjectsProps) => {
          return (
            <FeaturedProject
              title={project.title}
              description={project.description}
              location={project.location}
              visual={project.visual}
            />
          );
        })
      }
    </div>
  </Container>
</section>
